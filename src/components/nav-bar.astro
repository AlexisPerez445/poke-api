<div class="container">
  <nav>
    <a href="/">
      <img
        class="logo"
        src="/images/pokemon-logo-pokemon-icon-transparent-free-png.webp"
        alt="logo-pokemon"
      />
    </a>

    <a class="menu-link" href="/pokemons/1">
      <img class="menu-img" src="/images/menu.webp" alt="logo-pokemon" />
    </a>
  </nav>
</div>

<style>
  .container {
    position: absolute;
    left: 0;
    right: 0;
    margin-inline: auto;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 1rem;
  }

  nav .menu-img {
    width: 20%;
    filter: drop-shadow(3px 1px 5px #515151);
  }

  nav .logo {
    width: 60%;
  }

  nav a {
    width: fit-content !important;
  }
  .menu-link {
    text-align: right;
  }

  /* PC - TABLET */
  @media (min-width: 1024px) {
    nav {
      padding: 0;
    }
    nav .menu-img {
      width: 8%;
    }

    nav .logo {
      width: 30%;
    }
  }
</style>
